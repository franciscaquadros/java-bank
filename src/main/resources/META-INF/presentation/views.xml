<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="loginView" class="org.academiadecodigo.javabank.view.LoginView">
        <property name="loginController" value="loginController"></property>
        <property name="prompt" value="prompt"></property>
    </bean>

    <bean id="mainView" class="org.academiadecodigo.javabank.view.MainView">
        <property name="mainController" value="mainController"></property>
        <property name="prompt" value="prompt"></property>
    </bean>

    <bean id="balanceView" class="org.academiadecodigo.javabank.view.BalanceView">
        <property name="balanceController" value="balanceController"></property>
    </bean>

    <bean id="newAccountView" class="org.academiadecodigo.javabank.view.NewAccountView">
        <property name="newAccountController" value="newAccountController"></property>
    </bean>

    <bean id="accountTransactionView" class="org.academiadecodigo.javabank.view.AccountTransactionView">
        <property name="transactionController" value="transactionController"></property>
        <property name="prompt" value="prompt"></property>
    </bean>

</beans>